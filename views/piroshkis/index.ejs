<%- include('../partials/header') %>
<section>
    <h1>All Piroshkis</h1>

    <a href="/piroshki/new">New</a>
        <h2>Piroshkis</h2>
        <% for (key in piroshkis) {%>
            <hr>
            <h3><%= piroshkis[key].name %></h3>
            <h4><%= piroshkis[key].filling %></h4>
            <p><%= piroshkis[key].size %></p>
            <a href='/piroshkis/<%= key %>'><button>Show</button></a>
            <br>
            <br>
            <a href='/piroshkis/<%= key %>/edit'><button>Edit</button></a>
            <br>
            <br>
            <form method="POST" action="/piroshkis/<%= key %>?_method=DELETE">
            <button class="delete" type="submit">Delete</button>
            </form>
            <hr>
            <br>
        <% } %>
</section>
<%- include('../partials/footer') %>
