<%- include('../partials/header') %>

<h1>All Piroshkis</h1>

<a href="/piroshki/new">New</a>
    <h1>Piroshkis</h1>
    <% for (key in piroshki) {%>
        <hr>
        <h3><%= piroshki[key].name %></h3>
        <h4><%= piroshki[key].filling %></h4>
        <p><%= piroshki[key].size %></p>
        <a href='/piroshki/<%= key %>'><button>Show</button></a>
        <br>
        <br>
        <a href='/piroshki/<%= key %>/edit'><button>Edit</button></a>
        <br>
        <br>
        <form method="POST" action="/piroshki/<%= key %>?_method=DELETE">
        <button class="delete" type="submit">Delete</button>
        </form>
        <hr>
        <br>
    <% } %>

<%- include('../partials/footer') %>
